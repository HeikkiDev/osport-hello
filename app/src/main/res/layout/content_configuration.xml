<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.proyecto.enrique.osporthello.Activities.ConfigurationActivity"
    tools:showIn="@layout/activity_configuration"
    android:animateLayoutChanges="true">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccione su tipo de deporte para que puedan encontrarle otros aficionados"
            android:id="@+id/textView1"
            android:textSize="16dp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerSport" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primaryColor"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Para buscar a otros usuarios y poder ser encontrado debes activar la GeoBúsqueda"
            android:id="@+id/textView2"
            android:layout_gravity="top"
            android:textSize="16dp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/swGeoSearch"
            android:textSize="20dp"
            android:text="GeoBúsqueda"
            android:layout_margin="10dp"
            android:typeface="monospace" />

        <LinearLayout
            android:id="@+id/layoutGeoSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona el punto por el que te encontrarán en la GeoBúsqueda"
                android:id="@+id/textView7"
                android:layout_gravity="top"
                android:textSize="14dp" />
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mapGeoSearch"
            android:name="com.proyecto.enrique.osporthello.Fragments.CustomMapFragment"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:context="com.enrique.google_maps.MapsActivity"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primaryColor"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="En la zona de privacidad la ruta de tu entrenamiento no quedará registrada"
            android:id="@+id/textView4"
            android:layout_gravity="top"
            android:textSize="16dp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/swPrivacity"
            android:textSize="20dp"
            android:text="Zona de Privacidad"
            android:layout_margin="10dp"
            android:typeface="monospace" />

        <LinearLayout
            android:id="@+id/layoutPrivacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona el punto a partir del cual se generará la Zona de Privacidad"
                android:id="@+id/textView8"
                android:layout_gravity="top"
                android:textSize="14dp" />
            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/mapPrivacity"
                android:name="com.proyecto.enrique.osporthello.Fragments.CustomMapFragment"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                tools:context="com.enrique.google_maps.MapsActivity"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primaryColor"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elige qué notificaciones quieres recibir"
            android:id="@+id/textView3"
            android:layout_gravity="top"
            android:textSize="16dp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/swChatNotifications"
            android:textSize="20dp"
            android:text="Chat"
            android:layout_margin="10dp"
            android:typeface="monospace" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/swFriendsNotifications"
            android:textSize="20dp"
            android:text="Amigos"
            android:layout_margin="10dp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/btnEditConfiguration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_changes"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:background="@color/primaryDarkColor"
            android:layout_marginBottom="5dp" />

    </LinearLayout>

    </ScrollView>

</RelativeLayout>
